#!/bin/sh 
#
# Create an archive of the master branch to
#	stream-youtube-VERSION.tar.gz
# with the VERSION string passed as an argument.
# All the files in the archive are prefixed with
#	stream-youtube-VERSION/

pkgname=stream-youtube
version=$1

function usage {
	echo "usage: $0 <version>"
}

if [ -z $version ]; then
	>&2 echo "error: please provide a version string"
	usage
	exit 1
fi

git archive --prefix=$pkgname-$version/ master -o $pkgname-$version.tar.gz
